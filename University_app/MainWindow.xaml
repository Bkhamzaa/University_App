<Window x:Class="University_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:University_app"
        xmlns:views="clr-namespace:University_app.Views"
        Title="University Management" Height="600" Width="1000">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel VerticalAlignment="Top" Margin="10">
                <TextBlock Text="University App"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="White"
                           Margin="10"/>

                <Button Content="🏠 Dashboard"
                        Click="DashboardButton_Click"
                        Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="📚 Subject Management"
                        Click="SubjectManagementButton_Click"
                        Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="📝Exam Management"
                        Click="ExamManagementButton_Click"
                        Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="🧑‍🎓Student Management"
                        Click="StudentManagementButton_Click"
                        Style="{StaticResource SidebarButtonStyle}"/>

            </StackPanel>

        </Border>
        <Button Content=" 📥 Import Student"
Click="ImportStudentButton_Click"
Style="{StaticResource SidebarButtonStyle}" RenderTransformOrigin="0.491,0.482" Margin="28,390,28,147"/>

        <!-- Main Content -->
        <ContentControl x:Name="MainContentControl" Grid.Column="1"/>
    </Grid>
</Window>
